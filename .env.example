# WebAuthn Configuration
# Configure these values for your production deployment

# Relying Party (RP) Settings
# Your app/company name that will be shown to users during Face ID/Touch ID prompts
VITE_WEBAUTHN_RP_NAME="Revado Health"

# Your domain (required for production)
# For localhost development, leave this commented out
# VITE_WEBAUTHN_RP_ID="revado.com"

# Optional: URL to your app icon (shown in some authenticator UIs)
# VITE_WEBAUTHN_RP_ICON="https://revado.com/icon.png"

# Authentication Options
# Timeout for authentication operations in milliseconds (default: 60000)
VITE_WEBAUTHN_TIMEOUT=60000

# User verification requirement
# Options: "required", "preferred", "discouraged"
VITE_WEBAUTHN_USER_VERIFICATION="required"

# Attestation preference
# Options: "none", "indirect", "direct", "enterprise"
VITE_WEBAUTHN_ATTESTATION="direct"

# Authenticator attachment preference
# Options: "platform" (Face ID/Touch ID), "cross-platform" (USB keys), or leave empty for both
VITE_WEBAUTHN_AUTHENTICATOR="platform"

# Resident key requirement (for passwordless/passkeys)
# Options: "required", "preferred", "discouraged"
VITE_WEBAUTHN_RESIDENT_KEY="required"

# Challenge Configuration
# Length of the challenge in bytes (default: 32)
VITE_WEBAUTHN_CHALLENGE_LENGTH=32

# Feature Flags
# Allow multiple devices per user (default: true)
VITE_WEBAUTHN_MULTI_DEVICE=true

# Show device management in settings (default: true)
VITE_WEBAUTHN_DEVICE_MANAGEMENT=true

# Auto-prompt for biometric on sign in (default: true)
VITE_WEBAUTHN_AUTO_PROMPT=true

# Allow credential backup (iCloud Keychain sync) (default: true)
VITE_WEBAUTHN_ALLOW_BACKUP=true