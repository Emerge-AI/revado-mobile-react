# Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database Configuration
# SQLite database is stored locally by default
DB_PATH=./database/health_records.db

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security
# Add a secret key for sessions/JWT (if implementing auth)
SECRET_KEY=your-secret-key-here

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Storage
UPLOAD_DIR=./uploads
ENABLE_FILE_CLEANUP=true
FILE_CLEANUP_AGE_HOURS=24

# Processing (if implementing real OCR/AI)
ENABLE_OCR=false
OCR_API_KEY=your-ocr-api-key
AI_API_KEY=your-ai-api-key

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/server.log